<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_icon_shop"
        android:layout_width="35pt"
        android:layout_height="35pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:layout_gravity="center"
        android:src="@android:drawable/sym_def_app_icon" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namaKategoriTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="6pt"
            android:text="@string/category"/>
        <TextView
            android:id="@+id/namaTokoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="@string/shops_name"/>

        <TextView
            android:id="@+id/locationTokoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:text="@string/shops_location"/>

    </LinearLayout>
</LinearLayout>
